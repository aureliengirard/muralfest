{% extends "base.twig" %}

{% block content %}
<section class="basic-content">
    <div class="content single-post">

        {% include '/components/single-navigation.twig' %}

        <section class="col-wrapper">

                <div class="left-col">
                    <figure>
                        {% set thumbnail = Image(image_id).src %}
                        <img class="lazyload"
                            data-srcset="{{ thumbnail|resize(600, 400) }} 600w,{{ thumbnail|resize(300, 200) }} 300w,{{ thumbnail|resize(150, 100) }} 150w,{{ thumbnail|resize(250, 166) }} 250w,{{ thumbnail|resize(175, 116) }} 175w"
                            data-sizes="auto"
                            width="600"
                            height="400"
                            alt="{{ title }}">
                    </figure>

                    {%- include 'components/module_share.twig' with  { link: post.link, title: post.title } -%}
                </div>

            <div class="right-col">
                <h1>{{post.title}}</h1>

                {% set country = post.pays_dorigine %}
                {% if post.terms %}
                    <h3 class="styles">{{ post.terms( {query:{taxonomy:'style', orderby:'name', order: 'ASC'}} )|join(', ') }}</h3>
                {% endif %}

                {% if country %}
                    <p class="country country_{{site.language}}"><span>{{ __('Native country:', 'site-theme') }}</span> {% if 'fr_' in site.language %}{{ country_fr }}{% else %}{{ country_en }}{% endif %}</p>
                {% endif %}

                {% if post.siteweb %}
                    <a class="button smaller artist-socials" href="{{post.siteweb}}" target="_blank" rel="nofollow">{{ __('Website', 'site-theme') }}</a>
                {% endif %}


                {% if post.instagram %}
                    <a class="button smaller artist-socials" href="{{post.instagram}}" target="_blank" rel="nofollow">{{ __('Instagram', 'site-theme') }}</a>
                {% endif %}


                {% if post.facebook %}
                    <a class="button smaller artist-socials" href="{{post.facebook}}" target="_blank" rel="nofollow">{{ __('Facebook', 'site-theme') }}</a>
                {% endif %}

                {% if post.twitter %}
                    <a class="button smaller twitter artist-socials" href="{{post.twitter}}" target="_blank" rel="nofollow">{{ __('Twitter', 'site-theme') }}</a>
                {% endif %}
            </div>

        </section>

        <section class="bio">
            {{ post.meta('biographie') }}
        </section>
    </div>
    <div class="post-nav-wrapper">
        <div class="arrow-container prev-link"><a href="{{post.prev.link}}"><i class="far fa-angle-left"></i> <span>{{post.prev.title}}</span></a></div>
        <div class="arrow-container next-link"><a href="{{post.nest.link}}"><i class="far fa-angle-right"></i> <span>{{post.next.title}}</span></a></div>
    </div>



</section>
{% endblock %}