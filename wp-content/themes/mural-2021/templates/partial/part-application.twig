{%- set img_app = TimberImage(options.image_gauche) -%}
{%- set titles = options.texte_pour_liens -%}
{% set titles = titles|split(',') %}

<div class="row">


    <div class="col-auto">
        <h3 class="h2">{{ titles[0] }}</h3>

        {% if img_app -%}
        <figure class="app-image">
            <img src="{{ img_app.src }}" alt="{{ img_app.alt }}" width="{{ img_app.width }}" height="{{ img_app.height }}" />
        </figure>
        {%- endif %}

    </div>
    <div class="col-auto">
        <h3 class="h2">{{ titles[1] }}</h3>
        <div class="app-links">
            <a href="{{ options.app_store }}" target="_blank" rel="noopener">
                {%- if "en-" in site.language_attributes -%}
                    <img src="{{ theme.link }}/images/app-store.png" alt="App Store" />
                {%- else -%}
                    <img src="{{ theme.link }}/images/app-store-fr.png" alt="App Store" />
                {%- endif -%}
            </a>
            <a href="{{ options.google_play }}" target="_blank" rel="noopener">
                {%- if "en-" in site.language_attributes -%}
                    <img src="{{ theme.link }}/images/google-play.png" alt="Google Play" />
                {%- else -%}
                    <img src="{{ theme.link }}/images/google-play-fr.png" alt="Google Play" />
                {%- endif -%}
            </a>
        </div>
    </div>

</div>