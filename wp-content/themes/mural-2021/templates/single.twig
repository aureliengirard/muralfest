{% extends "base.twig" %}

{% set content_items = post.meta('contenu_avec_fond') %}

{% block content %}

    <div class="basic-content">
        <div class="content">

            {% include '/components/single-navigation.twig' %}

            <section class="article__img row">
                <figure>
					{%- set img = Image(post.meta('image_a_la_une')) -%}
					{%- set img_url = img.src -%}
					{%- set reponsize_sizes = "1920,1440,1366,1280,1170,960,800,768,720,640,512,414,375,360" -%}
					{%- include 'components/reponsive_img.twig' with  { img: img, img_url: img_url, reponsize_sizes: reponsize_sizes} -%}
                </figure>

            </section>

            <section class="content-blogt row">

                <div class="article__conten">
                    <h1>{{ post.title }}</h1>
                    <p class="date">{{ post.date | date('j F Y') }}</p>
                    <p class="post-categories">{{ __('categories', 'site-theme') }} :
                        {%- for categorie in post.categories -%}
                        <a href='{{categorie.link}}'>{{categorie.title}}</a>
                        {%- endfor -%}
                    </p>

                    {% include "partial/parts.twig" %}

                    {%- include 'components/module_share.twig' with  { link: post.link, title: post.title } -%}
                </div>

            </section>

            <section class="articles_du_blog">
				{% include "partial/part-articles_du_blog.twig" with  { link: post.link, title: post.title } %}
            </section>
        </div>
    </div>

{% endblock %}
