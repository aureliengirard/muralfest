{% if pagination.pages is not empty %}
    <section class="row pagination-block">
        <ul class="pagination">
            {% if pagination.pages|first and pagination.pages|first.current != true %}
                <li class="first">
                    <a href="{{ pagination.pages|first.link }}">&lt;&lt;</a>
                </li>
            {% else %}
                <li class="first disabled">
                    <a>&lt;&lt;</a>
                </li>
            {% endif %}

            {% if pagination.prev %}
                <li class="prev">
                    <a href="{{ pagination.prev.link }}">&lt;</a>
                </li>
            {% else %}
                <li class="prev disabled">
                    <a>&lt;</a>
                </li>
            {% endif %}

            {% for page in pagination.pages %}
                {% if page.link %}
                    <li>
                        <a href="{{ page.link }}" class="{{ page.class }}">{{ page.title }}</a>
                    </li>
                {% else %}
                    <li class="current">
                        <a class="{{ page.class }}">{{ page.title }}</a>
                    </li>
                {% endif %}
            {% endfor %}

            {% if pagination.next %}
                <li class="next">
                    <a href="{{ pagination.next.link }}">
                    	&gt;
                    </a>
                </li>
            {% else %}
                <li class="next disabled">
                    <a>
                        &gt;
                    </a>
                </li>
            {% endif %}
            {% if pagination.pages|last and pagination.pages|last.current != true %}
                <li class="last">
                    <a href="{{ pagination.pages|last.link }}">&gt;&gt;</a>
                </li>
            {% else %}
                <li class="last disabled">
                    <a>&gt;&gt;</a>
                </li>
            {% endif %}
        </ul>
    </section>
{% endif %}
