
{% set title = event_post.title %}
{% set link = event_post.link %}
{% set date_de_fin = event_post.date_de_fin %}
{% set event_date = event_post.event_date %}
{% set lieu = Post(event_post.lieu) %}

{% set preview = event_post.resume %}
{% set thumbnail = Image(event_post.image_de_levenement).src %}

{% set id = blog_post.id %}

<div class="col program card">
    {% if thumbnail %}
    <div class="card__header">

        <figure>
            <a href="{{link}}">
                <img class="lazyload"
                    data-srcset="{{ thumbnail|resize(600, 400) }} 600w,{{ thumbnail|resize(380, 279) }} 380w,{{ thumbnail|resize(300, 200) }} 300w,{{ thumbnail|resize(150, 100) }} 150w,{{ thumbnail|resize(250, 166) }} 250w,{{ thumbnail|resize(175, 116) }} 175w"
                    data-sizes="auto"
                    width="380"
                    height="279"
                    alt="{{ title }}">
            </a>
        </figure>
    </div>
    {% endif %}

    <div class="description card__body">
        <h3><a href="{{link}}">{{title}}</a></h3>
        <p class="event-infos">
            <span class="date">
            {%- if date_de_fin != event_date -%}
                {{- event_date | date('j F') }} {{__('to', 'dates Ã©vÃ©nement', 'site-theme')}} {{ date_de_fin | date('j F Y') }}
            {%- else -%}
                {{- event_date | date('j F, Y') }}
            {%- endif -%}
            </span>
            <span class="venue">{{lieu.title}}</span>
        </p>
        <p>{{preview|truncate(60)}}</p>
        <a class="readmore" href="{{link}}">{{__('Learn more +', 'site-theme')}}</a>
    </div>
</div>