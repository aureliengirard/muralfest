
{% set title = blog_post.title %}
{% set link = blog_post.link %}

{% set preview = blog_post.resume %}
{% if blog_post.image_a_la_une %}
    {% set image_a_la_une = blog_post.image_a_la_une|split(',') %}
    {% set image_a_la_une = image_a_la_une[1]|split(':') %}
    {% set image_a_la_une = image_a_la_une[1]|replace({'"': '', '}': ""}) %}
    {% set thumbnail = Image(image_a_la_une).src %}
{% endif %}
{% set id = blog_post.id %}

<div class="article blog_post">
    <div class="content">
        <figure>

            <a href="{{link}}">

                {% if thumbnail %}
                    <img class="lazyload"
                        data-srcset="{{ thumbnail|resize(600, 400) }} 600w,{{ thumbnail|resize(300, 200) }} 300w,{{ thumbnail|resize(150, 100) }} 150w,{{ thumbnail|resize(250, 166) }} 250w,{{ thumbnail|resize(175, 116) }} 175w"
                        data-sizes="auto"
                        width="600"
                        height="400"
                        alt="{{ title }}">
                {% endif %}
            </a>
        </figure>
        <div class="description">
            <h3><a href="{{link}}">{{title}}</a></h3>
            <p>{{preview}}</p>
            <a class="readmore" href="{{link}}">{{__('read more', 'site-theme')}}<span> ></span></a>
        </div>
    </div>
</div>