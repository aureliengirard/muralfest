
{% set title = blog_post.title %}
{% set link = blog_post.link %}

{% set preview = blog_post.resume %}
{% if blog_post.image_a_la_une %}
    {% set image_a_la_une = blog_post.image_a_la_une|split(',') %}
    {% set image_a_la_une = image_a_la_une[1]|split(':') %}
    {% set image_a_la_une = image_a_la_une[1]|replace({'"': '', '}': ""}) %}
    {% set thumbnail = Image(image_a_la_une).src %}
{% endif %}
{% set id = blog_post.id %}

<div class="col-auto article blog_post card">
    <div class="card__content">
        <div class="card__header">
            <figure>

                <a href="{{link}}">

                    {% if thumbnail %}
                    <img class="lazyload"
                    data-srcset="{{ thumbnail|resize(600, 400) }} 600w,{{ thumbnail|resize(400, 267) }} 400w,{{ thumbnail|resize(300, 200) }} 300w,{{ thumbnail|resize(150, 100) }} 150w,{{ thumbnail|resize(250, 166) }} 250w,{{ thumbnail|resize(175, 116) }} 175w"
                    data-sizes="auto"
                    width="380"
                    height="279"
                    alt="{{ title }}">
                    {% endif %}
                </a>
            </figure>
        </div>
        <div class="card__body description">
            <h3><a href="{{link}}">{{title}}</a></h3>
            {#} <p>{{preview}}</p> {#}
            <a class="readmore" href="{{link}}">{{__('Read more', 'site-theme')}}{% include 'svg/icon_arrows.svg' with  {class: 'readmore__icon'} %}</a>
        </div>
    </div>
</div>